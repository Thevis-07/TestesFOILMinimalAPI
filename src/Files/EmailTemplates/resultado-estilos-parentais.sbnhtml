<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <title>Resultado Estilos Parentais</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    /* será INLINADO pelo PreMailer.Net */
    .page   { width:100%; background:#f5f7fb; padding:24px 0; }
    .card   { width:600px; margin:0 auto; background:#fff; border:1px solid #e6eaf0; border-radius:12px; }
    .pad    { padding:24px; }
    .muted  { color:#6b7785; }
    .label  { font:600 11px system-ui,-apple-system,Segoe UI,Roboto,Arial; text-transform:uppercase; letter-spacing:.3px; color:#6b7785; }
    .value  { font:600 14px/1.5 system-ui,-apple-system,Segoe UI,Roboto,Arial; color:#0f1720; }
    .logo   { width:72px; height:72px; object-fit:contain; }
    .divider{ height:1px; background:#e6eaf0; }
    .th     { font:600 12px system-ui; color:#475569; text-align:left; padding:12px 16px; border-bottom:1px solid #e6eaf0; background:#f8fafc; }
    .td     { font:400 14px/1.5 system-ui; color:#111827; padding:12px 16px; border-bottom:1px solid #eef2f6; }
    .num    { text-align:center; font-weight:700; color:#111827; }
    @media (max-width:640px) { .card{ width:100%!important; border-radius:0!important; } .pad{ padding:16px!important; } .th,.td{ padding:10px 12px!important; } }
  </style>
</head>
<body>
  <table class="page" role="presentation" cellpadding="0" cellspacing="0">
    <tr>
      <td align="center">
        <table class="card" role="presentation" cellpadding="0" cellspacing="0">
          <!-- header -->
          <tr>
            <td class="pad">
              <table role="presentation" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                  <td valign="top">
                    <table role="presentation" cellpadding="0" cellspacing="0" width="100%">
                      <tr>
                        <td width="50%" style="padding-bottom:8px;">
                          <div class="label">Nome</div>
                          <div class="value">{{ aluno.nome }}</div>
                        </td>
                        <td width="50%" style="padding-bottom:8px;">
                          <div class="label">Curso</div>
                          <div class="value">{{ aluno.curso ?? "—" }}</div>
                        </td>
                      </tr>
                      <tr>
                        <td width="50%">
                          <div class="label">Idade</div>
                          <div class="value">{{ aluno.idade ?? "—" }}</div>
                        </td>
                        <td width="50%">
                          <div class="label">Semestre / Módulo</div>
                          <div class="value">{{ aluno.semestre ?? "—" }}</div>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <tr><td><div class="divider"></div></td></tr>

          <!-- tabela -->
          <tr>
            <td class="pad" style="padding-top:16px;">
              <table role="presentation" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                  <th class="th">Estilos Parentais</th>
                  <th class="th" width="120">Valor Pai</th>
                  <th class="th" width="120">Valor Mãe</th>
                </tr>

                {{ for item in itens }}
                <tr>
                  <td class="td">{{ item.categoria_nome }}</td>
                  <td class="td num">{{ item.total_pai }}</td>
                  <td class="td num">{{ item.total_mae }}</td>
                </tr>
                {{ end }}
              </table>
            </td>
          </tr>

          <!-- rodapé simples -->
          <tr>
            <td class="pad" style="padding-top:8px; color:#6b7785; font:400 12px/1.6 system-ui; border-top:1px solid #e6eaf0;">
              © {{ now | date.to_string "%Y" }} • Este é um e-mail automático.
            </td>
          </tr>

        </table>
      </td>
    </tr>
  </table>
</body>
</html>
